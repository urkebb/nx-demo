{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@viber-bot/authentication": ["libs/authentication/src/index.ts"],
      "@viber-bot/components": ["libs/components/src/index.ts"],
      "@viber-bot/includes": ["libs/includes/src/index.ts"],
      "@viber-bot/pages": ["libs/pages/src/index.ts"],
      "@viber-bot/shared": ["libs/shared/src/index.ts"],
      "@viber-bot/ui": ["libs/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
